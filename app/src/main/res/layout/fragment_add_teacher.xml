<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_color"
    android:orientation="vertical"
    tools:context=".administrateur.AddTeacherFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/bg_corner">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_gravity="start">


            <!-- lastname field -->
            <EditText
                android:id="@+id/lastname"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_input"
                android:drawableStart="@drawable/ic_person"
                android:drawableTint="@color/primary_color"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Nom"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/color_app_txt"
                android:autofillHints="name"
                android:textColorHint="@color/color_app_txt"/>

            <!-- firstname field -->
            <EditText
                android:id="@+id/firstname"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_input"
                android:drawableStart="@drawable/ic_person"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Prénom"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/color_app_txt"
                android:drawableTint="@color/primary_color"
                android:autofillHints="name"
                android:textColorHint="@color/color_app_txt" />

            <!-- email field -->
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_input"
                android:drawableStart="@drawable/ic_email"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColor="@color/color_app_txt"
                android:autofillHints="emailAddress"
                android:textColorHint="@color/color_app_txt"
                android:drawableTint="@color/primary_color"/>

            <!-- job function field -->
            <EditText
                android:id="@+id/job_function"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_input"
                android:drawableStart="@drawable/ic_job"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Profession"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColor="@color/color_app_txt"
                android:autofillHints="emailAddress"
                android:textColorHint="@color/color_app_txt"
                android:drawableTint="@color/primary_color"/>

            <!-- job function field -->
            <EditText
                android:id="@+id/work_at"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_input"
                android:drawableStart="@drawable/ic_work"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Lieux de Travail"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColor="@color/color_app_txt"
                android:autofillHints="emailAddress"
                android:textColorHint="@color/color_app_txt"
                android:drawableTint="@color/primary_color"/>

            <!-- phone number field -->
            <EditText
                android:id="@+id/phone_number"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_input"
                android:drawableStart="@drawable/ic_phone"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Numéro de Téléphone"
                android:inputType="phone"
                android:padding="10dp"
                android:textColor="@color/color_app_txt"
                android:drawableTint="@color/primary_color"
                android:autofillHints="phone"
                android:textColorHint="@color/color_app_txt"/>

            <!-- address field -->
            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_input"
                android:drawableStart="@drawable/ic_address"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Adresse"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/color_app_txt"
                android:autofillHints="postalAddress"
                android:textColorHint="@color/color_app_txt"
                android:drawableTint="@color/primary_color"/>

            <!-- sex field -->
            <EditText
                android:id="@+id/sex"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_input"
                android:drawableStart="@drawable/ic_gender"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Sexe"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/color_app_txt"
                android:autofillHints=""
                android:textColorHint="@color/color_app_txt"
                android:drawableTint="@color/primary_color"/>

            <include layout="@layout/button_app"/>


        </LinearLayout>

    </ScrollView>

</FrameLayout>