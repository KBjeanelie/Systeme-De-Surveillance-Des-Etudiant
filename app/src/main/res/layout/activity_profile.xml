<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/default_color"
    tools:context=".enseignant.Profile">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/card_bg"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="92dp"
                android:layout_height="92dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/femme"
                app:civ_border_color="@color/primary_color"
                app:civ_border_width="1dp"/>

            <TextView
                android:id="@+id/profile_fullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KUBEMBULA Jean Elie"
                android:textColor="@color/white"
                android:fontFamily="sans-serif"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/profile_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingenieur en Informatique"
                android:textColor="@color/gray_txt"
                android:fontFamily="sans-serif"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:textSize="14sp"
                android:textStyle="italic"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/card_bg"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">
                <ImageView
                    android:id="@+id/img_phone"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_phone"
                    app:tint="@color/primary_color" />

                <TextView
                    android:id="@+id/profile_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+ 242 06 483 88 70"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif"
                    android:textAlignment="center"
                    android:layout_toEndOf="@+id/img_phone"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="8dp"
                    android:textSize="18sp"
                    android:textStyle="italic"/>

            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/card_bg"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">
                <ImageView
                    android:id="@+id/img_mail"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_email"
                    app:tint="@color/primary_color" />

                <TextView
                    android:id="@+id/profile_mail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="elijahwalter2018@gmail.com"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif"
                    android:textAlignment="center"
                    android:layout_toEndOf="@+id/img_mail"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="8dp"
                    android:textSize="18sp"
                    android:textStyle="italic"/>

            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>




    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/card_bg"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">
                <ImageView
                    android:id="@+id/img_work"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_work"
                    app:tint="@color/primary_color" />

                <TextView
                    android:id="@+id/profile_work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ALphanet"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif"
                    android:textAlignment="center"
                    android:layout_toEndOf="@+id/img_work"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="8dp"
                    android:textSize="18sp"
                    android:textStyle="italic"/>

            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/card_bg"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">
                <ImageView
                    android:id="@+id/img_address"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_address"
                    app:tint="@color/primary_color" />

                <TextView
                    android:id="@+id/profile_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="242 rue Bandza Brazzaville"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif"
                    android:textAlignment="textStart"
                    android:layout_toEndOf="@+id/img_address"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="8dp"
                    android:textSize="18sp"
                    android:textStyle="italic"/>

            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/card_bg"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">
                <ImageView
                    android:id="@+id/img_sex"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_gender"
                    app:tint="@color/primary_color" />

                <TextView
                    android:id="@+id/profile_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Feminin"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif"
                    android:textAlignment="center"
                    android:layout_toEndOf="@+id/img_sex"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="8dp"
                    android:textSize="18sp"
                    android:textStyle="italic"/>

            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>



</androidx.appcompat.widget.LinearLayoutCompat>